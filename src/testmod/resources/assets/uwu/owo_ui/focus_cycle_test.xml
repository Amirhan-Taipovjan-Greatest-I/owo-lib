<owo-ui xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="../../../../../../owo-ui.xsd">
    <components>
        <flow-layout direction="vertical">
            <children>
                <grid-layout rows="2" columns="3">
                    <children>
                        <button row="0" column="0">
                            <text>1</text>
                        </button>
                        <button row="0" column="1">
                            <text>2</text>
                        </button>
                        <button row="0" column="2">
                            <text>3</text>
                        </button>
                        <button row="1" column="0">
                            <text>4</text>
                        </button>
                        <button row="1" column="1">
                            <text>5</text>
                        </button>
                        <button row="1" column="2">
                            <text>6</text>
                        </button>
                    </children>
                </grid-layout>

                <stack-layout>
                    <children>
                        <button>
                            <sizing>
                                <horizontal method="fixed">100</horizontal>
                                <vertical method="fixed">20</vertical>
                            </sizing>
                        </button>

                        <button>
                            <sizing>
                                <horizontal method="fixed">20</horizontal>
                                <vertical method="fixed">100</vertical>
                            </sizing>
                        </button>
                    </children>

                    <horizontal-alignment>center</horizontal-alignment>
                    <vertical-alignment>center</vertical-alignment>
                </stack-layout>

            </children>

            <horizontal-alignment>center</horizontal-alignment>
            <vertical-alignment>center</vertical-alignment>

            <surface>
                <blur quality="3" size="5"/>
            </surface>
        </flow-layout>
    </components>
</owo-ui>